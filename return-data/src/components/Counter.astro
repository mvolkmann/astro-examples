---
interface Props {
  count: number;
  label?: string;
}

const { count, label = "" } = Astro.props;
console.log("Counter.astro : count =", count);
---

<div class="row" x-data={`{count: ${count}}`}>
  {label && <div>{label}</div>}
  <button :disabled="count <= 0" @click="count--">-</button>
  <div x-text="count"></div>
  <button @click="count++">+</button>
</div>

<style>
  .row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
</style>
