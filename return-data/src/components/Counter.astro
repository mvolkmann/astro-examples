---
interface Props {
  label?: string;
}

const { label = "" } = Astro.props;
---

<div class="row" x-data="{count: 0}">
  {label && <div>{label}</div>}
  <button :disabled="count <= 0" @click="count--">-</button>
  <div x-text="count"></div>
  <button @click="count++">+</button>
</div>

<style>
  .row {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
</style>
