---
import { Image } from "astro:assets";
import whippet from "../images/whippet.webp";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Main">
  <h1>Astro View Transitions Demo</h1>
  <Image alt="whippet" class="img" src={whippet} transition:name="my-img" />
  <a href="detail">Detail</a>
  <video controls width="200" transition:name="my-video">
    <source src="/bunny-video.mp4" type="video/mp4" />
  </video>
</Layout>

<style is:global>
  .img {
    display: block;
    height: 10rem;
    width: auto;
  }
</style>

<style>
  a {
    display: block;
    margin: 1rem 0;
  }
</style>
